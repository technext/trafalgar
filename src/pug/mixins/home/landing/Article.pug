mixin Article(config)
  .col-12.col-sm-9.col-md-4.mt-4
    .card.rounded-3.shadow
      img(src=`${CWD}assets/img/gallery/${config.image}`  alt='')
      .card-body.p-4
        h5.fw-bold=config.title
        p.card-text=config.text
        a(href='#' role="button") Read more
          svg.bi.bi-arrow-right-short(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
            path(fill-rule='evenodd' d='M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z')

mixin Articles
  section
    +Background({ attrs: { style: { "background": `url(${CWD}assets/img/illustrations/article-bg.png) no-repeat center right, url(${CWD}assets/img/illustrations/dot.png) no-repeat center left`} }, className: '' }) 
    .container-lg
      .row.flex-center
        .col-auto.text-center
          h2.fw-bold Check out our latest article
          hr.mx-auto.text-dark(style="height:2px;width:50px")
      .row.pt-6.flex-center
        +Article({image:'article-1.png',title:'Disease detection, check up in the laboratory',text:'In this case, the role of the health laboratory is very important to do a disease detection...'})
        +Article({image:'article-2.png',title:'Disease detection, check up in the laboratory',text:'In this case, the role of the health laboratory is very important to do a disease detection...'})
        +Article({image:'article-3.png',title:'Disease detection, check up in the laboratory',text:'In this case, the role of the health laboratory is very important to do a disease detection...'})
        .text-center.pt-6
          button.btn.btn-lg.btn-outline-primary.rounded-pill(type='submit') View all
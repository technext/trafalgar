mixin Items(config)
  .col-12
    .card.text-white.text-center
      img.img-fluid(src=`${CWD}assets/img/illustrations/${config.image}` width="4500px" alt='')
      .card-img-overlay.p-7
        h2.fw-bold.text-white=config.title
        hr.mx-auto(style="height:2px;width:50px")
        .d-flex.align-items-center.text-start.mt-5
          
          img(src=`${CWD}assets/img/gallery/user.png` width="120" alt='').img-fluid.me-4.me-md-2.me-lg-4
          .w-25
            h5.mb-0.fw-medium.text-white=config.name
            p.fw-normal.mb-0=config.designation
          .w-75
            p.card-text.ms-5=config.text

mixin Testimonial
